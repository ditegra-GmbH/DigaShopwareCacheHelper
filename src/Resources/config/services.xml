<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="DigaShopwareCacheHelper\Service\DigaLoggerFactoryService">
            <argument type="service" id="monolog.logger"/> 
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="string">%kernel.logs_dir%/diga_cache_helper-%kernel.environment%.log</argument>
        </service>
        <service id="DigaShopwareCacheHelper\Subscriber\CacheEventsSubscriber">
            <argument type="service" id="DigaShopwareCacheHelper\Service\DigaLoggerFactoryService"/> 
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <!-- Decorate Shopware's CacheInvalidator to add logging -->
        <service id="DigaShopwareCacheHelper\Decorator\LoggingCacheInvalidator" decorates="Shopware\Core\Framework\Adapter\Cache\CacheInvalidator">
            <argument type="service" id="DigaShopwareCacheHelper\Decorator\LoggingCacheInvalidator.inner"/>
            <argument type="service" id="DigaShopwareCacheHelper\Service\DigaLoggerFactoryService"/>
            <argument type="service" id="request_stack"/>
            <argument>%kernel.environment%</argument>
        </service>
    </services>
</container>